<% provide :title, "Tài khoản" %>
<div class="content-header">
  <div class="header-section">
    <h1>
      <i class="fa fa-table"></i>Danh sách tài khoản
    </h1>
  </div>
</div>
<ul class="breadcrumb breadcrumb-top">
  <li>Tài khoản</li>
  <li><a href="">Danh sách</a></li>
</ul>
<div class="block full">
  <div class="block-title" id="btn-filter-container">
    <h2><strong>Tài khoản</strong></h2>
    <div class="btn-group btn-group-sm pull-right">
      <%= link_to "Hướng dẫn", trainer_users_path,
        class: "btn btn-primary btn-filter  active", remote: true %>
      <%= link_to "Thực tập sinh", trainer_users_path(type: "trainee"),
        class: "btn btn-primary btn-filter", remote: true %>
      <%= link_to "Đã khóa", trainer_users_path(type: "block"),
        class: "btn btn-primary btn-filter", remote: true %>
    </div>
  </div>
  <div class="table-responsive" id="table-content">
    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
      <thead>
        <tr>
          <th class="text-center">ID</th>
          <th class="text-center">
            <i class="gi gi-user"></i>
          </th>
          <th>Name</th>
          <th>Email</th>
          <th>Program</th>
          <th>Join Date</th>
          <th>Permission</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "user", collection: @users, as: :user %>
      </tbody>
    </table>
  </div>
</div>
<script>
  $(function(){ TablesUsers.init(); });
  $(function(){ btnFilterClick.init(); });
</script>
