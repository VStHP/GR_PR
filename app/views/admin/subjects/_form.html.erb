<%= form_for @subject, url: yield(:url_path), html: {id: "basic-wizard",
  class: "form-horizontal form-bordered" } do |f| %>
  <div id="first" class="step <%= yield :class_class %>">
    <div class="wizard-steps">
      <div class="row">
        <div class="col-xs-4 active">
          <span>1. Quan trọng</span>
        </div>
        <div class="col-xs-4">
          <span>2. Bổ sung</span>
        </div>
        <div class="col-xs-4">
          <span>3. Liên kết</span>
        </div>
      </div>
    </div>
    <%= render "shared/error_messages", object: @subject %>
    <div class="form-group <%= check_errors @subject, :id %>">
      <label class="col-md-3 control-label" for="subject_id">ID môn học <span class="text-danger">*</span></label>
      <div class="col-md-9">
        <%= f.text_field :id, class: "form-control", data: {toggle: "tooltip"},
            title: "ID môn học quy định từ 4-20 kí tự", placeholder: "Nhập ID môn học..", autofocus: true %>
        <span class="text-danger"><%= show_errors @subject, :id, "id" %></span>
      </div>
    </div>
    <div class="form-group <%= check_errors @subject, :name %>">
      <label class="col-md-3 control-label" for="subject_name">Tên môn học <span class="text-danger">*</span></label>
      <div class="col-md-9">
      <%= f.text_field :name, class: "form-control", placeholder: "Nhập tên môn học.." %>
      <span class="text-danger"><%= show_errors @subject, :name, "name" %></span>
      </div>
    </div>
    <div class="form-group <%= check_errors @subject, :day_on_learn %>">
      <label class="col-md-3 control-label" for="subject_language">Số ngày học <span class="text-danger">*</span></label>
      <div class="col-md-9">
      <%= f.number_field :day_on_learn, class: "form-control", min: 1, data: {toggle: "tooltip"},
            title: "Số ngày học tối thiểu là 1", placeholder: "Nhập sô ngày học.." %>
      <span class="text-danger"><%= show_errors @subject, :day_on_learn, "day_on_learn" %></span>
      </div>
    </div>
    <div class="text-right" style="padding-right: 20px">
      <label class="control-label "><span class="text-danger">*</span> Thuộc tính bắt buộc</label><br>
      <label class="control-label "><%= yield :warning %></label>
    </div>
  </div>
  <div id="second" class="step">
    <div class="wizard-steps">
      <div class="row">
        <div class="col-xs-4 done">
          <span><i class="fa fa-check"></i></span>
        </div>
        <div class="col-xs-4 active">
          <span>2. Bổ sung</span>
        </div>
        <div class="col-xs-4">
          <span>3. Liên kết</span>
        </div>
      </div>
    </div>
    <div class="form-group <%= check_errors @subject, :description %>">
      <label class="col-md-3 control-label" for="subject_program">Mô tả</label>
      <div class="col-md-9">
      <%= f.text_area :description, rows: 6, class: "form-control", placeholder: "" %>
      <span class="text-danger"><%= show_errors @subject, :description, "program" %></span>
      </div>
    </div>
    <div class="form-group <%= check_errors @subject, :avatar %>">
      <label class="col-md-3 control-label" for="val_avatar">Avatar </label>
      <div class="col-md-9">
        <%= f.file_field :avatar, id: "avatarSubject" %>
        <%= image_tag(@subject.avatar.url, class: "img-responsive", style: "height: 100px;", id: "avatar_image_subject") %>
        <span class="text-danger"><%= show_errors @subject, :avatar, "avatar" %></span>
        <span class="help-block">Đề xuất sử dụng ảnh kích thước 64x64 để có trải nghiệm tốt nhất</span>
      </div>
    </div>
  </div>
  <div id="third" class="step">
    <div class="wizard-steps">
      <div class="row">
        <div class="col-xs-4 done">
          <span><i class="fa fa-check"></i></span>
        </div>
        <div class="col-xs-4 done">
          <span><i class="fa fa-check"></i></span>
        </div>
        <div class="col-xs-4 active">
          <span>3. Liên kết</span>
        </div>
      </div>
    </div>
    <div class="form-title">
      <a class="btn btn-sm btn-default btn-title link">
        <i class="fa fa-plus-square"></i> Danh sách liên kết bổ sung
      </a>
    </div>
    <%= f.fields_for :links do |link| %>
      <%= render 'link_fields', f: link %>
    <% end %>
    <div class="form-group form-actions text-right link_fields">
      <%= link_to_add_association 'Thêm liên kết mô tả', f, :links, class: "btn btn-sm btn-success " %>
    </div>
    <div class="form-title">
      <a class="btn btn-sm btn-default btn-title task">
        <i class="fa fa-plus-square"></i> Danh sách chương của môn học
      </a>
    </div>
    <%= f.fields_for :tasks do |task| %>
      <%= render 'task_fields', f: task %>
    <% end %>
    <div class="form-group form-actions text-right task_fields">
      <%= link_to_add_association 'Thêm chương', f, :tasks, class: "btn btn-sm btn-success " %>
    </div>
  </div>
  <!-- Form Buttons -->
  <div class="form-group form-actions">
    <div class="col-md-8 col-md-offset-4">
      <input type="reset" class="btn btn-sm btn-warning" id="back" value="Back">
      <input type="submit" class="btn btn-sm btn-primary load-spinner" id="next" value="Next">
    </div>
  </div>
  <!-- END Form Buttons -->
<% end %>
