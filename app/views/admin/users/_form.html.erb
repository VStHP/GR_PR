<%= form_for @user, method: :post, url: admin_users_path, html: {class: "form-horizontal form-bordered"} do |f| %>
  <div class="col-md-6">
    <div class="block">
      <div class="block-title">
        <h2>
          <strong>Thông tin cần thiết</strong>
        </h2>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="user_name">Name </label>
        <div class="col-md-9">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter user's name .." %>
          <span class="help-block">Please enter user's name</span>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="user_email">Email </label>
        <div class="col-md-9">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter user's email .." %>
          <span class="help-block">Please enter user's email</span>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="user_password">Password </label>
        <div class="col-md-9">
          <%= f.text_field :password, class: "form-control", value: "123123", disabled: true %>
          <span class="help-block">Default pasword for all user í 123123</span>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-3 control-label" for="user_permission">Permission </label>
        <div class="col-md-9">
          <%= f.select :permission, [['Trainer', 'trainer'], ['Trainee', 'trainee']], {}, {class: "form-control"} %>
          <span class="help-block">Please enter user's program</span>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="block">
      <div class="block-title">
        <h2>
          <strong>Thông tin bổ sung</strong>
        </h2>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label">Gender</label>
          <div class="col-md-9">
            <label class="radio-inline" for="user_gender_male">
              <%= f.radio_button :gender, "male", :checked => true %> Male
            </label>
            <label class="radio-inline" for="user_gender_female">
              <%= f.radio_button :gender, "female" %> Female
            </label>
          </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="user_birthday">Birthday </label>
        <div class="col-md-9">
          <%= f.text_field :birthday, dât: {provide: "datepicker"}, class: "datepick form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="user_phone">Phone </label>
        <div class="col-md-9">
          <%= f.text_field :phone, class: "form-control", placeholder: "Enter user's phone .." %>
          <span class="help-block">Please enter user's phone</span>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="user_university">University </label>
        <div class="col-md-9">
          <%= f.text_field :university, class: "form-control", placeholder: "Enter user's university .." %>
          <span class="help-block">Please enter user's university</span>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label" for="user_program">Program </label>
        <div class="col-md-9">
          <%= f.text_field :program, class: "form-control", placeholder: "Enter user's program .." %>
          <span class="help-block">Please enter user's program</span>
        </div>
      </div>

      <div class="form-group form-actions">
        <div class="col-md-9 col-md-oét-3">
          <%= f.submit "Submit", class: "btn btn-sm btn-primary" %>
          <%= submit_tag("reset", {name: "reset", id: "reset", type: "reset", class: "btn btn-sm btn-warning"}) %>
        </div>
      </div>
    </div>
  </div>
<% end %>
