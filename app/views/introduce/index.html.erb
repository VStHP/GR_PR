<section id="registry-div" class="wrapper-intro style3 special">
  <div class="head-section">
    <div class="major">
      <h2>Đăng ký thực tập</h2>
      <p>Hãy nhập đầy đủ các thông tin quan trọng dưới đây!</p>
    </div>
  </div>
  <div class="body-section">
    <%= form_for @registration, remote: true do |f| %>
      <div class="row uniform">
        <div class="small">
          <%= f.text_field :name, placeholder: "Họ tên người đăng ký", class: "form-control del_ip" %>
          <span class="candidate-name-invalid error-message"></span>
        </div>
        <div class="small">
          <%= f.text_field :email, placeholder: "Địa chỉ email đăng ký", class: "form-control del_ip" %>
          <span class="candidate-email-invalid error-message"></span>
        </div>
        <div class="small">
          <%= f.text_field :phone, placeholder: "Số điện thoại người đăng ký", class: "form-control del_ip" %>
          <span class="candidate-phone-invalid error-message"></span>
        </div>
        <div class="small">
          <%= f.text_field :position, placeholder: "Vị trí đăng ký thực tập", class: "form-control del_ip" %>
          <span class="candidate-position-invalid error-message"></span>
        </div>
        <div class="large">
          <%= f.text_area :message, placeholder: "Tin nhắn", rows: "6", class: "del_ip" %>
          <span class="candidate-name-message error-message"></span>
        </div>
        <div class="large">
          <label class="text-special">Tệp CV</label>
          <span><%= f.file_field :cv_url, class: "transparent absolute del_ip", style: "color: #fff" %></span>
          <span class="note-cv">Chỉ cho phép file PDF, DOC hoặc DOCX</span><br>
          <span class="candidate-cv_url-invalid error-message" style="margin-left: 78px;"></span>
        </div>
        <div>
          <ul class="actions">
            <!-- <input value="Send Message" class="special-btn" type="submit"> -->
            <%= f.submit "Send Message", class: "special-btn load-spinner" %>
          </ul>
        </div>
      </div>
    <% end %>

  </div>
</section>
