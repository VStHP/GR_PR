<!-- Contact -->
<section class="site-content site-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4 site-block">
        <div class="site-block">
          <h3 class="h2 site-heading"><strong><%= @company.name.capitalize %></strong></h3>
          <address>
            Địa chỉ: <%= @company.address %><br>
            Thị trấn/ Thành phố: <%= @company.city %><br>
            <i class="fa fa-phone"></i> <%= @company.phone %><br>
            <i class="fa fa-envelope-o"></i> <a href="javascript:void(0)"><%= @company.email %></a>
          </address>
        </div>
        <div class="site-block">
          <h3 class="h2 site-heading"><strong>Giới thiêu</strong></h3>
          <p class="remove-margin">
            <%= @company.description %>
          </p>
        </div>
      </div>
      <div class="col-sm-6 col-md-8 site-block">
        <h3 class="h2 site-heading"><strong>Liên hệ</strong></h3>
        <form action="" method="post" id="form-contact">
          <div class="form-group">
            <label for="contact-name">Tên của bạn</label>
            <input type="text" id="contact-name" name="contact-name" class="form-control form-control-text input-lg" placeholder="Your name..">
          </div>
          <div class="form-group">
            <label for="contact-email">Email</label>
            <input type="text" id="contact-email" name="contact-email" class="form-control form-control-text input-lg" placeholder="Your email..">
          </div>
          <div class="form-group">
            <label for="contact-message">Nội dung tin nhắn</label>
            <textarea id="contact-message" name="contact-message" rows="10" class="form-control form-control-text input-lg" placeholder="Let us know how we can assist.."></textarea>
          </div>
          <div class="form-group">
            <button type="button" id="noon" class="btn btn-lg btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
