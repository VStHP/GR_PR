<% define_course_profile @user %>
<div class="block">
  <div class="block-title">
    <div class="block-options pull-right">
      <em>số lượng: <%= @course_joins.length %></em>
    </div>
    <h2>
      <strong>Khóa học</strong> tham gia
    </h2>
  </div>
  <table class="table table-striped table-vcenter table-trainer">
    <tbody>
      <%= render partial: "component/profile_component/course",
        collection: @course_joins, as: :course %>
    </tbody>
  </table>
</div>
<% if @user.trainer? %>
  <div class="block">
    <div class="block-title">
      <div class="block-options pull-right">
        <em>số lượng: <%= @course_owners.length %></em>
      </div>
      <h2>
        <strong>Khóa học</strong> chủ nhiệm
      </h2>
    </div>
    <table class="table table-striped table-vcenter table-trainer">
      <tbody>
        <%= render partial: "component/profile_component/course",
          collection: @course_owners, as: :course %>
      </tbody>
    </table>
  </div>
<% end %>
