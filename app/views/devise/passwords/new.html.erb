<% provide :title, "Quên mật khẩu?" %>
<div class="wrapper-login" id="login-prime" style="display: block;">
  <div class="container-login">
    <%= link_to root_path, class: "cancel-login" do %><i class="fa fa-close"></i><% end %>
    <h1>Bạn quên mật khẩu?</h1>
    <%= form_for resource, as: resource_name, url: password_path(resource_name),
      html: {method: :post, class: "form-login"} do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, placeholder: "Đia chỉ email tài khoản ..", class: "input-login" %>
      <%= f.submit "Đặt lại mật khẩu", class: "button-login" %>
      <br>
      <%= link_to "Đăng nhập", new_session_path(resource_name) %><br />
    <% end %>
  </div>

  <ul class="bg-bubbles">
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
  </ul>
</div>
