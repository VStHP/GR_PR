<% provide :title, @user.name %>
<div class="content-header">
  <div class="header-section">
    <h1>
      <i class="gi gi-notes_2"></i><%= @user.name.capitalize %>
      <br>
        <small>Chỉnh sửa tài khoản</small>
    </h1>
  </div>
</div>
<ul class="breadcrumb breadcrumb-top">
  <li><%= link_to "Tài khoản của tôi", profiles_path(@user) %></li>
  <li>
    <a href="">Chỉnh sửa</a>
  </li>
</ul>
<div class="row">
  <div class="col-md-6">
    <div class="block">
      <div class="block-title">
        <h2><strong>Tài khoản</strong> Thành phần</h2>
      </div>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name),
        html: { method: :put, class: "form-horizontal form-bordered" } do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <label class="col-md-3 control-label" for="email">Email <span class="text-danger">*</span></label>
          <div class="col-md-9">
            <%= f.email_field :email, id:"email", class:"form-control",
              autocomplete: "email", placeholder: "Nhập địa chỉ Email .." %>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="form-group">
            <div class="col-md-9">
              <span class="help-block">Currently waiting confirmation for: <%= resource.unconfirmed_email %></span>
            </div>
          </div>
        <% end %>
        <div class="form-group">
          <label class="col-md-3 control-label" for="password">Mật khẩu </label>
          <div class="col-md-9">
            <%= f.password_field :password, id:"password", class:"form-control",
              autocomplete: "off", placeholder: "Nhập mật khẩu mới .." %>
            <span class="help-block">Để trống nếu bạn không muốn thay đổi mật khẩu tài khoản
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> kí tự tối thiểu</em>
              <% end %>
            </span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label" for="password_confirmation">Nhập lại mật khẩu</label>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, id:"password_confirmation", class:"form-control",
              autocomplete: "off", placeholder: "Nhập lại mật khẩu mới .." %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label" for="current_password">Mật khẩu hiện tại <span class="text-danger">*</span></label>
          <div class="col-md-9">
            <%= f.password_field :current_password, id:"current_password", class:"form-control",
              autocomplete: "email", placeholder: "Nhập mật khẩu hiện tại .." %>
            <span class="help-block">Chúng tôi cần mật khẩu hiện tại của bạn để xác thực thay đổi</span>
          </div>
        </div>
        <div class="form-group form-actions">
          <div class="col-md-9 col-md-offset-3">
            <%= f.submit "Cập nhật", class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
