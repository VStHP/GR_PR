<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag "logo.png" %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag 'application', "data-turbolinks-track": "reload" %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <script type="text/javascript">
      <% flash.each do |message_type, message| %>
        <% if message_type == "success" %>
          alertify.success('<%= message %>');
       <% elsif message_type == "danger" %>
          alertify.error('<%= message %>');
        <% else %>
          alertify.notice('<%= message %>');
        <% end %>
      <% end %>
    </script>
    <div id="page-wrapper">
      <!-- Preloader functionality (initialized in js/app.js) - pageLoading() -->
       <!-- render "layouts/layout_primary/preloader" -->
      <!-- END Preloader -->
      <div id="page-container" class="sidebar-partial sidebar-visible-lg sidebar-no-animations">
        <!-- Alternative Sidebar -->
         <!-- render "layouts/layout_primary/sidebar_alt"  -->
        <!-- END Alternative Sidebar -->
        <!-- Main Sidebar -->
        <%= render "layouts/layout_primary/sidebar" %>
        <!-- END Main Sidebar -->
        <div id="main-container">
          <!-- Header -->
          <%= render "layouts/layout_primary/header" %>
          <!-- END Header -->
          <!-- Page content -->
          <div id="page-content">
            <%= yield %>
          </div>
          <!-- END Page Content -->
          <!-- Footer -->
          <%= render "layouts/layout_primary/footer" %>
          <!-- END Footer -->
        </div>
      </div>
      <a href="#" id="to-top" style="display: block;"><i class="fa fa-angle-double-up"></i></a>
      <div class="spinner">
        <div class="sk-cube-grid">
          <div class="sk-cube sk-cube1"></div>
          <div class="sk-cube sk-cube2"></div>
          <div class="sk-cube sk-cube3"></div>
          <div class="sk-cube sk-cube4"></div>
          <div class="sk-cube sk-cube5"></div>
          <div class="sk-cube sk-cube6"></div>
          <div class="sk-cube sk-cube7"></div>
          <div class="sk-cube sk-cube8"></div>
          <div class="sk-cube sk-cube9"></div>
        </div>
      </div>
    </div>
  </body>
</html>
