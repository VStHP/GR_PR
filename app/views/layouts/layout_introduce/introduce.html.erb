<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag "logo.png" %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "introduce", media: "all" %>
    <script src="http://maps.google.com/maps/api/js?libraries=places&key=AIzaSyAWcryZKPjK4K_tNzBxsZkTpZQ5qhzDo54"></script>
    <%= javascript_include_tag "introduce" %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <script type="text/javascript">
      <% flash.each do |message_type, message| %>
        <% if message_type == "success" %>
          alertify.success('<%= message %>');
       <% elsif message_type == "danger" %>
          alertify.error('<%= message %>');
        <% else %>
          alertify.success('<%= message %>');
        <% end %>
      <% end %>
    </script>
    <div id="page-container">
      <%= render "layouts/layout_introduce/header" %>
      <%= yield %>
      <%= render "layouts/layout_introduce/footer" %>
    </div>

    <!-- Scroll to top link, initialized in js/app.js - scrollToTop() -->
    <a href="#" id="to-top"><i class="fa fa-angle-up"></i></a>
  </body>
</html>
